    {
      "segment_id": "79ad944d",
      "source_content": "Jako wyzwalacz tej automatyzacji wybieramy zdarzenie typu ``tag_scanned``:",
      "source_content_hash": "d5a20947bbf038e88c70c3e7f80ea81627b8c501bed387592be65092d1c53f86",
      "node_type": "paragraph",
      "translatable": true,
